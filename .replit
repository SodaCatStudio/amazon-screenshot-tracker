entrypoint = "main.py"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "gh", "libffi", "libiconv", "libxcrypt", "nano", "openssl", "pkg-config", "python313Packages.beautifulsoup4", "python313Packages.environs", "python313Packages.gunicorn", "rustc"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

